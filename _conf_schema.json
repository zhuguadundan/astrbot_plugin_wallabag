{
  "wallabag_url": {
    "description": "Wallabag 服务器地址",
    "type": "string",
    "hint": "Wallabag 实例的完整 URL，例如：https://wallabag.example.com",
    "obvious_hint": true
  },
  "client_id": {
    "description": "OAuth 客户端 ID",
    "type": "string",
    "hint": "在 Wallabag 开发者页面创建的 OAuth 客户端 ID",
    "obvious_hint": true
  },
  "client_secret": {
    "description": "OAuth 客户端密钥",
    "type": "string",
    "hint": "在 Wallabag 开发者页面创建的 OAuth 客户端密钥",
    "obvious_hint": true
  },
  "username": {
    "description": "Wallabag 用户名",
    "type": "string",
    "hint": "您的 Wallabag 账户用户名",
    "obvious_hint": true
  },
  "password": {
    "description": "Wallabag 密码",
    "type": "string",
    "hint": "您的 Wallabag 账户密码",
    "obvious_hint": true
  },
  "auto_save": {
    "description": "自动保存 URL",
    "type": "bool",
    "hint": "是否自动检测并保存消息中的 URL",
    "default": true
  },
  "request_timeout": {
    "description": "请求超时时间",
    "type": "int",
    "hint": "网络请求超时时间（秒）",
    "default": 30
  },
  "cache_max_size": {
    "description": "缓存最大数量",
    "type": "int",
    "hint": "已保存 URL 缓存的最大数量（FIFO 淘汰）",
    "default": 1000
  },
  "debug_mode": {
    "description": "调试模式",
    "type": "bool",
    "hint": "是否启用调试模式，将输出更详细的日志",
    "default": false
  },
  "advanced_settings": {
    "description": "高级设置",
    "type": "object",
    "hint": "高级配置选项，通常无需修改",
    "items": {
      "token_refresh_buffer": {
        "description": "令牌刷新缓冲时间",
        "type": "int",
        "hint": "令牌过期前多少秒开始刷新",
        "default": 60
      },
      "max_retry_attempts": {
        "description": "最大重试次数",
        "type": "int",
        "hint": "API 调用失败时的最大重试次数",
        "default": 3
      },
      "retry_delay": {
        "description": "重试延迟",
        "type": "int",
        "hint": "重试之间的延迟时间（秒）",
        "default": 2
      },
      "user_agent": {
        "description": "用户代理",
        "type": "string",
        "hint": "HTTP 请求的用户代理字符串",
        "default": "AstrBot-Wallabag-Plugin/1.0.0"
      },
      "skip_ssl_verify": {
        "description": "跳过 SSL 验证",
        "type": "bool",
        "hint": "禁用 SSL 证书校验，存在中间人攻击风险（MITM）。仅在受信网络或测试环境使用，生产环境不建议开启。",
        "default": false
      }
    }
  }
}
